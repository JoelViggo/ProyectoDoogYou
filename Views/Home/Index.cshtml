<section id="login" class="container-fluid">
    <div class="row row-cols-1 justify-content-center align-items-center" style="height: 100vh;">
        <div class="col col-lg-4 col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Iniciar Sesión</h2>
                </div>
                <div class="card-body">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nombre de Usuario</label>
                            <input type="text" class="form-control" id="username" placeholder="Nombre de Usuario" required>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="Contraseña" required>
                        </div>
                        <div class="d-grid">
                            <button type="button" class="btn btn-primary" onclick="login()">Iniciar Sesión</button>
                        </div>
                    </form>
                    <div id="loginMessage" class="mt-3"></div>
                </div>
                <div class="card-footer bg-primary text-white text-center">
                    <a href="#" class="text-white" onclick="showSection('register')" style="text-decoration: underline;">Registrarse</a>
                </div>
            </div>
        </div>
    </div>

</section>

<section id="register" class="text-center justify-content-center" style="display:none;">
    <div class="col text-start"><button onclick="showSection('login')" class="btn btn-primary mt-2">Volver</button></div>
    <div class="row row-cols-1" style="max-width: 400px; margin: auto; padding-top: 20px;">
        <h2 style="text-align: center;" class="text-white">Registro de Usuario</h2>
        <div style="margin-bottom: 15px;">
            <input type="text" id="newUsername" placeholder="Nuevo Nombre de Usuario" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <div style="margin-bottom: 15px;">
            <input type="password" id="newPassword" placeholder="Nueva Contraseña" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <div style="text-align: center;">
            <button onclick="register()" style="padding: 10px 20px; border: none; background-color: #007bff; color: white; border-radius: 5px; cursor: pointer;" class="btn btn-primary">Registrarse</button>
        </div>
        <div id="registerMessage" style="margin-top: 15px; text-align: center;" class="text-white"></div>
    </div>

</section>

